<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="CustomerPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>uk.co.oldnicksoftware.crudycucumber.domain.MicroMarket</class>
        <class>uk.co.oldnicksoftware.crudycucumber.domain.Customer</class>
        <class>uk.co.oldnicksoftware.crudycucumber.domain.DiscountCode</class>
        <class>uk.co.oldnicksoftware.crudycucumber.domain.Product</class>
        <class>uk.co.oldnicksoftware.crudycucumber.domain.Manufacturer</class>
        <class>uk.co.oldnicksoftware.crudycucumber.domain.ProductCode</class>
        <class>uk.co.oldnicksoftware.crudycucumber.domain.PurchaseOrder</class>    
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/sample"/>
            <property name="javax.persistence.jdbc.user" value="app"/>
            <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
            <property name="javax.persistence.jdbc.password" value="app"/>
        </properties>
    </persistence-unit>
</persistence>
